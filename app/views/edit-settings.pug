extends index
block content
  h1 Update Your Information
  form(action="/settings/edit" method="POST")
    input(type="text" name="first_name" value=first_name required)
    input(type="text" name="last_name" value=last_name required)
    input(type="email" name="email" value=email required)
    input(type="text" name="safe_code" value=safe_code required)
    input(type="text" name="emergency_code" value=emergency_code required)
    

    button(type="submit" text="Submit") OK